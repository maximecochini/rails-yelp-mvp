<div class="container d-flex align-items-center justify-content-between mb-4">
  <h1>Restaurants</h1>
  <%= link_to "+ Add a new restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>

<div class="list-group restaurant-list">
<% @restaurants.each do |restaurant| %>
  <%= link_to restaurant_path(restaurant), class: "d-flex list-group-item list-group-item-action justify-content-between align-items-center" do %>
    <p class="col-10"><i class="fas fa-store"></i> <%= restaurant.name %> <span>(<%= restaurant.category %>)</span></p>
    <span class="badge badge-primary badge-pill"><%= rand(0..5.0).round(1) %></span>
  <% end %>
<% end %>
</div>

